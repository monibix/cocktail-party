<div id="cocktail-detail">
    <div class="cocktail-detail-card">
    <h1 class="cocktail-title">{{cocktailDetails.name}}</h1>
    <div class="cocktail-image-container">
        <img class="cocktail-image" src="{{cocktailDetails.cocktailImage}}" alt="{{cocktailDetails.name}}">
    </div>

    <div class="right-card">

    <div class="cocktail-description">
        <h4>Description</h4>
        <p>{{cocktailDetails.shortDescription}}</p>
        <div class="ingredients-measures-list">
            <div class="ingredients-list">
                <h4>Ingredients</h4>
                <ul class="ingredients-list">
                    {{#each cocktailDetails.ingredients}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            <div class="measures-container">
                <h4>Measures</h4>
                <ul class="measures-list">
                    {{#each cocktailDetails.measures}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <h4>Instructions</h4>
        <p>{{cocktailDetails.instructions}}</p>
        <h4>Description</h4>
        <p>{{cocktailDetails.longDescription}}</p>
    </div>
</div>

{{#if checkCocktail}}
    <div class="cocktail-buttons">
        <form action="/cocktails/{{cocktailDetails.id}}/delete" method='POST'>
            <button type="submit">Delete Cocktail</button>
        </form>
        <form action="/cocktails/{{cocktailDetails.id}}/edit">
            <button type="submit">Edit Cocktail</button>
        </form>
    </div>
{{else }}
{{!-- <h2>Funciona !!!!</h2> --}}
    {{#if cocktailDetails.cocktailOwner}}
        <a id="add-to-favs" href="/auth/user-profile-public/{{cocktailDetails.cocktailOwner}}">View profile Creator<a>
    {{/if}}
{{/if}}

<div class="add-to-favs-container">
    {{#if _id}}
        {{#if isFavourite}}
            <a id="add-to-favs" href="/cocktails/favourite-cocktails/{{cocktailDetails.id}}">Remove to Favourites</a>
        {{else}}
            <a id="add-to-favs" href="/cocktails/favourite-cocktails/{{cocktailDetails.id}}">Add to Favourites</a>
        {{/if}}
{{/if}}
</div>

