{{!-- <h1>Cocktail Party!</h1> --}}

<div id="home">
        
        <div class="home-card">

    <div id="homeCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/cocktail-party-1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/cocktail-party.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/cocktail-party.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>


<section class="destacados">
    <div class="destacados-title">
        <h3>DESTACADOS</h3>
        <p>Los cocktails más populares del momento</p>
    </div>
    <div class="destacados-cocktails">
    {{#each filteredCocktails}}
        <div class="destacados-cocktails">
        <div class="cocktail-1">
            <a href="/cocktails/{{_id}}"><img src="{{cocktailImage}}" alt="{{name}}"></a>
            <p>{{name}}</p>
        </div>
    {{/each }}
    </div>
</section>


<section class="destacados">
    <div class="destacados-title">
        <h3>NOVEDADES</h3>
        <p>Descubre las últimas creaciones de los usuarios</p>
    </div>
    <div class="destacados-cocktails">
    {{#each lastCocktails}}
        <div class="novedades-cocktails">
        <div class="cocktail-1">
            <a href="/cocktails/{{_id}}"><img src="{{cocktailImage}}" alt="{{name}}"></a>
            <p>{{name}}</p>
        </div>
    {{/each }}
    </div>
</section>

<section class="comparte">
    <div class="comparte-title">
        <h3>COMPARTE TUS CREACIONES</h3>
        <p>Publica tus cócteles y conoce a los demás creadores</p>
    </div>
    <div class="comparte-icons">
        <div class="icon">
            <img src="/images/registra.png" alt="registra">
            <p>Registrate</p>
        </div>
        <div class="icon">
            <img src="/images/completa.png" alt="completa">
            <p>Completa tu perfil</p>
        </div>
        <div class="icon">
            <img src="/images/crea.png" alt="crea">
            <p>Crea tu cocktail</p>
        </div>
        <div class="icon">
            <img src="/images/publica.png" alt="publica">
            <p>Publícalo en Cocktail Party!</p>
        </div>
    </div>
    <div class="button">
        <a href="/auth/signup">Empieza ahora</a>
    </div>
</section>

    </div>

</div>