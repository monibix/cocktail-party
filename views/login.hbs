
<div class="form">
        <h2>Log in</h2>
        <form class ="form" action="/auth/login" method="POST">
            <label class="label" for="email">Email</label>
            <input class="input" type="email" name="email" id="email" placeholder="Enter your email here" required>
            <label class="label" for="password">Password</label>

            <div class="password">
                <input class="input" class="input" type="password" name="password" id="password" placeholder="Choose a password" required>
                <button type="button" onclick="mostrarContrasena()">
                    <img class="seepassword-img" src="../images/seepassword.png" alt="Password">
                </button>
            </div>

            <button type="submit">Log in</button>
        </form>
        {{#if error}}
        <p class="error-message">{{error}}</p>
        {{/if}}
</div>