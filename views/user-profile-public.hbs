<div id="user-profile">

    <h1 class="user-profile-title">Public profile of {{cocktail}} Creator</h1>

        <div class="user-card">
            <img class="user-image"src="{{userInfo.userImage}}" alt="User Image">
            <h2 class="cocktail-title">{{userInfo.username}}</h2>
            <p class="email">{{userInfo.email}}</p>
            <p class="phone">{{userInfo.phone}}</p>
            <h3>About me</h3>
            <p class="about">{{userInfo.aboutUser}}</p>
            
            <div class="address-container">
                <div class="address-title-container">
                    <h4>Where I live</h4>
                    <p class="address">{{userInfo.address}}</p>
                </div>
                <div class="address-map-container">
                    <h4>View on Maps</h4>
                    <iframe width="200" height="200" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q={{userInfo.address}}&key={{apikey}}" allowfullscreen></iframe>
                </div>
            </div>

            <h3>My Favourites</h3>
            <div class="my-cocktails-container">
                {{#each userInfo.favourites}}
                    <a href="/cocktails/{{_id}}"><img id="my-cocktail-images" src="{{cocktailImage}}" alt="New Cocktail" width="200px"></a>
                    <p>{{name}}</p>
                {{/each}}
            </div>  

            <h3>My own Cocktails creations</h3>
            <div class="my-cocktails-container">
                {{#each userInfo.myCocktails}}
                    <a href="/cocktails/{{_id}}"><img id="my-cocktail-images" src="{{cocktailImage}}" alt="New Cocktail" width="200px"></a>
                    <p>{{name}}</p>
                {{/each}}
            </div>

            <div class="buttons-container">
                <a class="chat-button" href="/auth/chat">Chat with me!</a>
            </div>
        </div> 


</div>

